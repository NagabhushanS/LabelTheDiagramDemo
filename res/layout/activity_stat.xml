<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FF9900"
    tools:context="com.example.labelthediagram.StatActivity" >

    <LinearLayout
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/playPause"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/ic_action_user" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="SCORES AND POINTS"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textSize="40sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SCORE"
        android:textColor="#FFFFFF" />

    <TextView
        android:layout_marginBottom="5dp"
         android:gravity="center"
        android:textSize="20sp"
        android:id="@+id/timeScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time: "
        android:textColor="#FFFFFF" />

    <TextView
        android:layout_marginBottom="30dp"
         android:gravity="center"
          android:textSize="20sp"
        android:id="@+id/labelScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Labels: 3"
        android:textColor="#FFFFFF" />

    <TextView
        android:layout_marginBottom="10dp"
         android:gravity="center"
         android:textSize="40sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TOP SCORE"
        android:textColor="#FFFFFF" />

    <TextView
        android:layout_marginBottom="30dp"
         android:gravity="center"
        android:id="@+id/topTime"
          android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#FFFFFF" />

    <TextView
        android:layout_marginBottom="10dp"
         android:gravity="center"
         android:textSize="40sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="STATISTICS"
        android:textColor="#FFFFFF" />

    <TextView
         android:gravity="center"
          android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/totalGames"
        android:textColor="#FFFFFF" />

</LinearLayout>